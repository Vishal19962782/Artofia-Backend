<%- include('header')%>
<body>
    <section class="vh-100">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-6 text-black">
      
              <div class="px-5 ms-xl-4">
                <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
               <a href="/"> <span class="h1 fw-bold mb-0"><i class="lni lni-drupal-original"></i></span></a>
              </div>
      
              <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
      
                <form style="width: 30rem;" action="register" method="post" id="cform">
      
                  <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h3>
                  <% if(errors){ %> 
                   
                     <div class="alert alert-warning alert-dismissible fade show" role="alert">
                       <ul >
                      <% for(let i=0;i<errors.length;i++){ %>  
                       <li  ><%=errors[i].msg %> </li>
                       <% } %>  
                      </ul>
                       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                     </div>
                  
                   <% } %> 
                  <div class="form-outline mb-4">
                    <input type="text" name='fname' id="vname"  class="form-control form-control-lg" />
                    <label class="form-label" for="form2Example18">First name</label>
                    <br>
                    <span class="err" id="errorbox"></span>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="text" name='lname' id="lname" class="form-control form-control-lg" />
                    <label class="form-label"  for="form2Example18">Last name</label>
                    <br>
                    <span class="err" id="errorbox1"></span>
                  </div>
      
                  <div class="form-outline mb-4">
                    <input type="text" name='mail' id="vmail"   class="form-control form-control-lg" />
                    <label class="form-label" for="form2Example18">Enter Email address</label>
                    <br>
                    <span class="err" id="errorbox2"></span>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name='password' id="password"  class="form-control form-control-lg" />
                    <label class="form-label" for="form2Example28">Enter new Password</label>
                    <br>
                    <span class="err" id="errorbox3"></span>
                  </div>
                  
                  <div class="pt-1 mb-4">
                    <div class="error">
                      <p><%= locals.err?err:"" %> </p>
                    </div>
                    <button class="btn btn-info btn-lg btn-block contact__button" type="submit">Create Account</button>
                  </div>
                  <%= locals.message?message:"" %> 
                </form>
      
              </div>
      
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block ">
              <img src="https://images.unsplash.com/photo-1618331833071-ce81bd50d300?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8YWJzdHJhY3QlMjBhcnR8ZW58MHx8MHx8&w=1000&q=80" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
          </div>
        </div>
      </section>
      <script src="/static/validate.js"></script>
</body>
</html>
